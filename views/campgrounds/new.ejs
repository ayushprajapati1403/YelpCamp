<% layout('./layouts/boilerplate') -%>



	<div class="row">
		<h1 class="text-center">new Campground</h1>
		<div class="col-md-6 offset-md-3">


			<form action="/campground" method="post" novalidate class="validated-form" enctype="multipart/form-data">

				<div class="mb-3">
					<label class="form-label" for="title">Title</label>
					<input class="form-control" type="text" id="title" name="campground[title]" required>

					<div class="valid-feedback">
						looks good!
					</div>


				</div>

				<div class="mb-3">
					<label class="form-label" for="location">Location</label>
					<input class="form-control" type="text" id="location" name="campground[location]" required>

					<div class="valid-feedback">
						looks good!
					</div>
				</div>
				<!-- <div class="mb-3">
					<label class="form-label" for="image">Image-url</label>
					<input class="form-control" type="file" id="image" name="campground[image]" multiple required>

					<div class="valid-feedback">
						looks good!
					</div>
				</div> -->
				<div class="mb-3">
					<label class="form-label" for="price">Campground price</label>
					<div class="input-group">
						<span class="input-group-text" id="price-label">$</span>
						<input class="form-control" type="text" id="price" name="campground[price]" placeholder="0.00"
							aria-describedby="price-label" aria-label="price" required>

						<div class="valid-feedback">
							looks good!
						</div>
					</div>
				</div>
				<div class="mb-3">
					<label class="form-label" for="description">Description</label>
					<textarea class="form-control" type="text" id="description" name="campground[description]"
						required></textarea>

					<div class="valid-feedback">
						looks good!
					</div>
				</div>
				<div class="mb-3 ">
					<label for="campground[image]" class="form-label ">Upload Images</label>
					<input class="form-control  " type="file" id="image" name="campground[image]" multiple >
				  
				</div>
				
				<div class="mb-3 ">
					<button class="btn btn-success">Add Campground</button>
				</div>
			</form>
			<a href="/campground">All Campgrounds</a>
		</div>
